<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col--11 col-sm-10 col-lg-8 col-xl-6">
        <h1>welcome to
          <i class="fa-solid fa-book"></i>
          <strong>Bookers</strong>
          !!
        </h1>
        <p>In
          <i class="fa-solid fa-book"></i>
          <strong>Bookers</strong>,
        </p>
        <p>you can share and exchange your opinions , inpressions , and emotions</p>
        <p>about various books!</p>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
      <% if user_signed_in? %>
      <%= link_to "Log in", users_path(current_user.id), class: "btn btn-info" %><br><br>
      <%= link_to "Sign up", users_path(current_user.id), class: "btn btn-success" %>
      <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-info" %><br><br>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</main>