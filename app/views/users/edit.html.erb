<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1>User info</h1>

      <% if @user.errors.any? %>
      <strong><%= @user.errors.count %>errors prohibited this obj from being saved: </strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>

      <h4>Name</h4>
      <%= f.text_field :name %>

      <h4>image</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>

      <h4>Introduction</h4>
      <%= f.text_area :introduction %><br>
      <%= f.submit 'Update User', class: "btn btn-secondary" %>

      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>  