<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
      <strong><%= @book.errors.count %>errors prohibited this obj from being saved: </strong>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @book, url: book_path, method: :patch do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %><br>

      <%= f.submit 'Update Book', class: "btn btn-success" %>

      <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>

      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>  