<% if @book.errors.any? %>
  <strong><%= @book.errors.count %>errors prohibited this obj from being saved: </strong>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<%= form_with model: @book, url: book_path, method: :patch do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %><br>

<%= f.submit 'Update Book' %>

<p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>

<% end %>