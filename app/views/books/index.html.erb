<h1>Books</h1>

<%= @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Opinion</p>
  <span><%= book.body %></span>

<% end %>

<h1>User info</h1>
  <%= image_tag @user.get_image(), size: "100x100" %>

<%= link_to edit_user_path(@user) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h1>New Book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>